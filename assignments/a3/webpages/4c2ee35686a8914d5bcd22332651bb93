        function track_tweet( event ) {       
            var href = $('#social_data').data('content_url');
            socialTrack('Twitter', 'Tweet', href);
        }
        function track_follow( event ) {
            var href = $('#social_data').data('content_url');
            socialTrack('Twitter', 'Follow', href);
        }

        twttr.ready(function (twttr) {
            twttr.events.bind('tweet', track_tweet);
            twttr.events.bind('follow', track_follow);
        });
        
        function callback_linkedin() {
            var href = $('#social_data').data('content_url');
            socialTrack('Linkedin', 'Share', href);
        }
        
