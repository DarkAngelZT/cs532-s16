<script>
  var linkchange=function(){
    jQuery(".team a").each(function(index){ 
        var theLink = jQuery(this).html();
        var noSpace = theLink.replace(/\s+/g, '');
        var pageAddre = window.location.hostname;
        if(noSpace == "Chelsea"){
          jQuery(this).attr("href","http://"+pageAddre+"/topic/ChelseaF.c."); 
          }
          else if(noSpace == "CrystalPalace"){
            jQuery(this).attr("href","http://"+pageAddre+"/topic/CrystalPalaceFC"); 
          }
          else if(noSpace == "LeicesterCity"){
            jQuery(this).attr("href","http://"+pageAddre+"/topic/LeicesterCity"); 
          }
          else if(noSpace == "Liverpool"){
            jQuery(this).attr("href","http://"+pageAddre+"/topic/LiverpoolFC"); 
          }
        
           else if(noSpace == "AstonVilla"){
            jQuery(this).attr("href","http://"+pageAddre+"/topic/AstonVilla"); 
          }
          else if(noSpace == "TottenhamHotspur"){
            jQuery(this).attr("href","http://"+pageAddre+"/topic/TottenhamHotspur"); 
          }
           else if(noSpace == "Watford"){
            jQuery(this).attr("href","http://"+pageAddre+"/topic/WatfordFc"); 
          }
          else if(noSpace == "Sunderland"){
            jQuery(this).attr("href","http://"+pageAddre+"/topic/SunderlandAFC"); 
          }
          else if(noSpace == "Southampton"){
            jQuery(this).attr("href","http://"+pageAddre+"/topic/SouthamptonFc"); 
          }
        else{
        jQuery(this).attr("href","http://"+pageAddre+"/topic/"+noSpace); 
      }
    });
 },
 _optaParams = {
custID: "0715e2a9ec308b4bc886c825fb161258",
