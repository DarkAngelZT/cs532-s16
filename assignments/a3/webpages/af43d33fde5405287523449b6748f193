jQuery(window).resize(function(){
	var iframe = jQuery('.opl-vid-wrap iframe'),
		c_width = iframe.parent().parent().innerWidth(),
		width = iframe.attr('width'),
		height = iframe.attr('height');

		var ratio = ( height / width ),
		newWidth = c_width,
		newHeight = newWidth * ratio;
		
		//if ( newWidth <= width ) {
			iframe.css({
				'max-width': width + 'px',
				'width' : newWidth + 'px',
				'height' : newHeight + 'px'
			});
		//}
}).resize();
</script>
