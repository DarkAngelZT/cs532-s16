}
function megaMenuCallBack(data,container)
{
    console.log(container,data);
    if(data==null){
        ga('send', 'event', 'LHS_SectionPage_Data', 'Fail', container);
    }else{
        ga('send', 'event', 'LHS_SectionPage_Data', 'Success', container);
    }
    var mainImage = data. paidAds[0]. mainimage;
    if(mainImage==null){
        ga('send', 'event', 'LHS_SectionPage_image', 'Fail', container);
    }else{
        ga('send', 'event', 'LHS_SectionPage_image', 'Success', container);
    }
    varTpl ='<a target="_blank" href='+data. paidAds[0].clk+'><img src='+data. paidAds[0]. mainimage+'><figcaption>'+data. paidAds[0].title+'</figcaption></a><span class="by blk"><span class="lc byTxt" style="color:#fff; padding-top:6px">Sponsored By <a href="javascript:void(0);">'+data. paidAds[0].brandtext+'</a></span><span style="float:right; width:10px; height:10px; margin:6px 5px 5px 0"><img src="'+data. paidAds[0].colombiaLogo+'" /></span></span>';
    //varTpl = '<a target="_blank" href='+data. paidAds[0].clk+' class="tint transAllEase image_show"><img style="transition: all 0.2s ease 0s; display: inline;" src='+data. paidAds[0]. mainimage+' class="transAllEase" ></a><figcaption class="transAllEase image_show"><a href='+data. paidAds[0].clk+' class="lnk">'+data. paidAds[0].title+'</a><span class="by blk"><span class="lc byTxt">Sponsored By <a href="javascript:void(0);">'+data. paidAds[0].brandtext+'</a></span><span style="float:right; width:10px; height:10px; margin:6px 5px 5px 0"><img src="'+data. paidAds[0].colombiaLogo+'" /></span></span></figcaption>';
    
    if(data!=null)
    {
        $('.'+container).html(varTpl);
    }
}
