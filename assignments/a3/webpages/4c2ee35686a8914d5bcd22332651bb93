    <script>
    /*function for next button position and show prev story*/
    
    var MXP = MXP || {};
    MXP.article_id = 29380;
    
     function next_mouse_effect(){
             $('.btn_next').mouseover(function(){
                            $('.prev_story').show().fadeIn().css("display","table");
                            if($('.imgBlock .button_panel').is(':visible')) $('.followers').css({right:267,});
                            $(this).addClass('act')
                    });

             $('.button_panel').mouseleave(function(){
                            $('.prev_story').hide().fadeOut();
                            $('.followers').css({right:0})
                            $('.btn_next').removeClass('act')				
                    });
     }

        $(document).ready(function() {  
              next_mouse_effect();		
              $(window).scroll(function() {
            var pos = $(".up").position();
            var top_pos = $(".imgBlock").position();
            var windowpos = $(window).scrollTop();   		
            if (windowpos >= pos.top || windowpos < top_pos.top+300 )
            {
                $(".button_panel.fixed").hide();
                $(".imgBlock .button_panel").show();
                next_mouse_effect();						
            }     
            else
            {                
                $(".imgBlock .button_panel").hide();    
                $(".button_panel.fixed").show();
                $('.btn_next').removeClass('act');
            }
        });
        setTimeout(function(){
        var socdata_obj = {url: 'http%3A%2F%2Fwww.mensxp.com%2Frelationships%2Frelationship-problems%2F29380-why-modern-relationships-are-falling-apart-so-easily-today.html', id: '29380'};
        updateSocial(socdata_obj, [$("#count1 .soc_count"), $("#count2 .soc_count"), $("#count3 .soc_count"), $("#count4 .soc_count")], 'Article');
        
        }, 2000);
    });  
    </script>
    <script>
    /*function for social bar fixed position*/
        $(document).ready(function() {  
            $(window).scroll(function() {
            var pos = $(".up").position();
            var top_pos = $(".imgBlock").position();
            var windowpos = $(window).scrollTop();  
            if($(window).width()>1060){
                if (windowpos >= pos.top || windowpos < top_pos.top )
                {
                    $(".social_inner").removeClass('fixed');                                
                }		
                else
                {
                    $(".social_inner").addClass('fixed');
                }
                        if (windowpos >= pos.top){
                         $(".social_inner").hide();					
                        }else{
                          $(".social_inner").show()

                        }
            }

        });

    });  
    </script>
