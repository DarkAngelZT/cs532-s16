    <script>

	function disablelink(){
	
	$("#main a").each(function(){  

  $(this).attr('href2',$(this).attr('href'));  
 $(this).removeAttr("href")

});

$("#main").attr('onclick','menudisplay2()');
	
	}
	function enablelink(){
	
	$("#main a").each(function(){  
 $(this).attr('href',$(this).attr('href2'));  
 $(this).removeAttr("href2")
  $(this).attr('class','');  

});

$("#main").attr('onclick','');
	
	}
  function menudisplay(){
	
	 
  $('#menuopen').animate({'margin-left':'0%'},500,function(e){
  $('.main_container').addClass('opis');
  
disablelink();

$('#ondo').attr('onClick','menudisplay2();');
$('#sticky-footer').hide();


  });

  $('.main_container').addClass('width60');

  $('#menuopen').addClass('addHeaderClass');

	if($( document ).height()>parseInt($(window).scrollTop()+800))
	{	
    $('#menuopen').css('top',$(window).scrollTop());
	}

  if(enble=='true'){
  jwplayer("ipadcodelivetv").pause('true');
 jwplayer("streaming").pause('true');
  }
  }


  

  function menudisplay2(){
  
  $('#menuopen').animate({'margin-left':'-41%'},500,function(e){
	   $('.main_container').removeClass('width60');
  $('.main_container').removeClass('opis');
 enablelink();
$('#ondo').attr('onClick','menudisplay();');
$('#sticky-footer').show();
  });
  if(enble=='true'){
jwplayer("ipadcodelivetv").play('true'); 
 jwplayer("streaming").play('true');
  }
  }
$(document).scroll(function() {
  $('#menuopen').addClass('addHeaderClass');
  	if($( document ).height()>parseInt($(window).scrollTop()+800))
	{	
    $('#menuopen').css('top',$(window).scrollTop());
	}
});



