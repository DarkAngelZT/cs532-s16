	function socialRHSHide(){
		if(skinningExist){
			if($(".social_bar").length > 0){
				$(".social_bar").hide();
			}
		}
	}
    function bindCloseSkin(count){
        if(count > 10) return;
        var clsBtn = $('body > #closeDiv');
        if( clsBtn.length > 0 ) {
            clsBtn.click(function(){
                hideOOPSlots();
            });
        } else {
            setTimeout(1000, bindCloseSkin(count+1));
        }
    }
</script>

   

    
